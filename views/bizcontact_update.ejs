<%- include('partials/header') %>

    <%- include('partials/content', { topTitle: "Update Business Contact" }) %>

    <div class="Container">
        <form action="/bizcontact/update/<%= contact._id %>" method="POST">
            <fieldset>
                <p>
                    <label for="contactName">Contact Name: </label>
                    <input id="contactName" name="contactName" size="25" type="text" value="<%= contact.contactName %>" required="required" tabindex="1">
                </p>
                <p>
                    <label for="contactPhone">Contact Phone: </label>
                    <input id="contactPhone" name="contactPhone" size="25" type="text" value="<%= contact.contactPhone %>" required="required" tabindex="3">
                </p>
                <p>
                    <label for="email">Email: </label>
                    <input id="email" name="email" size="35" type="text" value="<%= contact.email %>" required="required" tabindex="5">
                </p>
            </fieldset>
            <p>
                <a href="#" class="deleteContactButton" onclick="confirmDeleteContact('<%= contact._id %>', '<%= contact.contactName %>')">Delete</a>
                <input name="submitButton" type="submit" value="Update" tabindex="7">
                <a href="/bizcontact" class="logoutButton">Cancel</a>
            </p>
        </form>
    </div>
    <div>

    </div>

    <script>
        // Prompt confirmation before deleting the selected contact record
        function confirmDeleteContact(contactId, contactName) {
            let isConfirmDelete = confirm('Confirm to delete contact record of <' + contactName + '>?');
            if (isConfirmDelete) {
                window.location.href = '/bizcontact/delete/' + contactId;
            }
        }
    </script>
      
<%- include('partials/footer') %>