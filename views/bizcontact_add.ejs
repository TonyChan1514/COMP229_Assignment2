<%- include('partials/header') %>

    <%- include('partials/content', { topTitle: "Add Business Contact" }) %>

    <div class="Container">
        <form action="/bizcontact/add" method="POST">
            <fieldset>
                <p>
                    <label for="contactName">Contact Name: </label>
                    <input id="contactName" name="contactName" size="25" type="text" required="required" tabindex="1">
                </p>
                <p>
                    <label for="contactPhone">Contact Phone: </label>
                    <input id="contactPhone" name="contactPhone" size="25" type="text" required="required" tabindex="3">
                </p>
                <p>
                    <label for="email">Email: </label>
                    <input id="email" name="email" size="35" type="text" required="required" tabindex="5">
                </p>
            </fieldset>
            <p>
                <input name="submitButton" type="submit" value="Add" tabindex="5">
                <a href="/bizcontact" class="logoutButton">Cancel</a>
            </p>
        </form>
    </div>
      
<%- include('partials/footer') %>